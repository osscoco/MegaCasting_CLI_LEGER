<!DOCTYPE html>
<html>
    {% block html %}
    <head>
        <meta charset="UTF-8">
        <title>
        {% block title %}
        MegaCasting
        {% endblock %}
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        {% block stylesheets %} 
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        
        <link rel="stylesheet" href="{{ asset('css/colors.css') }}">
        <link rel="stylesheet" href="{{ asset('css/font-awesome.css') }}">
        {% endblock %}
    </head>
    <body>
        <div id="wrapper">
            <!-- Header
            ================================================== -->
            <header class="sticky-header" style="background-color: gray;">
            <div class="container">
            <div class="sixteen columns">

                <!-- Menu -->
                <nav id="navigation" class="menu">
                    
                    <ul id="responsive">

                        <li><h1><a href="/"><img src="{{ asset('pictures/img/test.png') }}" alt="MegaCasting" /></a></h1>
                        </li>

                        <li id="hoverrable"><a id="current" class="accueil" href="/">Accueil</a>
                        </li>

                        <li id="hoverrable"><a class="annonce" href="/annonce?page=1">Annonces</a>
                        </li>

                        {% if app.user %}

                        <li><a href="#">Espace Professionnel</a>
                            <ul>
                                <li><a href="#">Profil</a></li>
                                <li><a href="#">Mes Annonces</a></li>
                            </ul>
                        </li>

                        {% endif %}
                    </ul>

                    
                   <!-- <ul class="float-right">
                    {% if app.user == null %}
                        <li><a href="/login"><i class="fa fa-lock"></i>Se connecter (Bientôt Disponible)</a></li>
                    {% endif %}
                    {% if app.user %}
                        <li><a href="{{ path('app_logout') }}"><i class="fa fa-lock"></i>Logout</a></li>
                    {% endif %}
                    </ul>-->

                </nav>

                <!-- Navigation -->
                <div id="mobile-navigation">
                    <a href="#menu" class="menu-trigger"><i class="fa fa-reorder"></i></a>
                </div>

            </div>
            </div>
            </header>
            <div class="clearfix"></div>

            {% block content %}

            {% endblock %}

            <!-- Footer
            ================================================== -->
            <div class="margin-top-15"></div>

            <div id="footer">

            <!-- Bottom -->
            <div class="container">
                <div class="footer-bottom">
                    <div class="sixteen columns">
                        <div class="copyrights">©  Copyright 2021 par Corentin JEANNOT | Hicham ESSAYED MESSAOUDI. Tous Droits Réservés. Template WorkScout</div>
                    </div>
                </div>
            </div>

            </div>

            <!-- Back To Top Button -->
            <div id="backtotop"><a href="#"></a></div>

        </div>
        <!-- Wrapper / End -->


        <!-- Scripts
        ================================================== -->
        
        <script src="{{ asset('script/jquery-3.6.0.min.js') }}"></script>
        <script src="{{ asset('script/jquery-migrate-3.3.2.min.js') }}"></script>
        <script src="{{ asset('script/custom.js') }}"></script>
        <script src="{{ asset('script/jquery.superfish.js') }}"></script>
        <script src="{{ asset('script/jquery.themepunch.tools.min.js') }}"></script>
        <script src="{{ asset('script/jquery.themepunch.revolution.min.js') }}"></script>
        <script src="{{ asset('script/jquery.themepunch.showbizpro.min.js') }}"></script>
        <script src="{{ asset('script/jquery.flexslider-min.js') }}"></script>
        <script src="{{ asset('script/chosen.jquery.min.js') }}"></script>
        <script src="{{ asset('script/jquery.magnific-popup.min.js') }}"></script>
        <script src="{{ asset('script/waypoints.min.js') }}"></script>
        <script src="{{ asset('script/jquery.counterup.min.js') }}"></script>
        <script src="{{ asset('script/jquery.jpanelmenu.js') }}"></script>
        <script src="{{ asset('script/stacktable.js') }}"></script>
        <script src="{{ asset('script/slick.min.js') }}"></script>
        <script src="{{ asset('script/headroom.min.js') }}"></script>
        <script src="{{ asset('script/script_change_css.js') }}"></script>
        <script src="{{ asset('script/hoverIntent.js') }}"></script>
        <script src="{{ asset('script/jquery.gmaps.min.js') }}"></script>
        <script src="{{ asset('script/switcher.js') }}"></script>

        </body>
</html>
{% endblock %}
